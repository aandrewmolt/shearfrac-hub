{
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "rewrites": [
    {
      "source": "/((?!assets/).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "github": {
    "silent": false
  },
  "crons": [
    {
      "path": "/api/cron/sync",
      "schedule": "0 */5 * * *"
    }
  ],
  "functions": {
    "api/sync/*.ts": {
      "runtime": "edge",
      "maxDuration": 30
    },
    "api/cron/*.ts": {
      "runtime": "edge",
      "maxDuration": 60
    }
  }
}